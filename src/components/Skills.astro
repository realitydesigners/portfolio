---
import { skills } from '../constants/text';
---

<div class="backdrop-blur-sm bg-black/20 p-8 rounded-2xl border border-gray-200/20 shadow-xl">
  <h2 class="text-3xl text-center font-bold mb-10 bg-clip-text text-transparent bg-gradient-to-r from-gray-100 to-gray-300">
    Technical Expertise
  </h2>
  
  <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-3">
    {Object.entries(skills).map(([category, items]) => (
      <div class="space-y-2">
        <h3 class="text-gray-400 text-sm uppercase tracking-wider mb-3">{category}</h3>
        {items.map(skill => (
          <div class="px-4 py-2 bg-black/40 text-sm font-medium text-gray-200 rounded-lg border border-gray-200/20 hover:border-gray-600 hover:bg-black/60 transition-all duration-300 cursor-default">
            {skill}
          </div>
        ))}
      </div>
    ))}
  </div>
</div> 